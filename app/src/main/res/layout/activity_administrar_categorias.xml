<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/administrar_categor_as"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:textStyle="bold"/>

    <!-- RecyclerView para mostrar las categorías -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCategorias"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Botón para agregar nueva categoría -->
    <Button
        android:id="@+id/btnAgregarCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/agregar_categor_a"
        android:layout_marginTop="16dp"/>

    <!-- Botón para eliminar la categoría seleccionada -->
    <Button
        android:id="@+id/btnEliminarCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eliminar_categor_a"
        android:layout_marginTop="8dp"/>

</LinearLayout>
